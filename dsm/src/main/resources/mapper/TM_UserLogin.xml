<?xml version="1.0" encoding="UTF-8"?>   
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >    
<mapper namespace="dao.IUserInfoDao" >      
    <resultMap id="BaseResultMap" type="vo.User">      
        <result column="USERNAME" property="username" jdbcType="VARCHAR" />    
        <result column="PASSWORD" property="password" jdbcType="VARCHAR" />
        <result column="TELEPHONE" property="telephone" jdbcType="VARCHAR" />
        <result column="AGE" property="age" jdbcType="VARCHAR" />
        <result column="COMPANY" property="company" jdbcType="VARCHAR" />
        <result column="USERID" property="userId" jdbcType="VARCHAR" />
        <result column="EMAIL" property="email" jdbcType="VARCHAR" />
        <result column="USERROLE" property="userRole" jdbcType="VARCHAR" />            
    </resultMap>    
    
    <sql id="Base_User_Info">    
        username, password, telephone, age, company, userId, email    
    </sql>    
    
    <!-- 查询用户-->    
    <select id="queryByUserName" resultMap="BaseResultMap"    
        parameterType="java.lang.String">    
        SELECT    
        A.username,A.password,A.telephone,A.age,A.company,A.userId,A.email,C.userRole    
        FROM TM_USERINFO AS A, TM_USERROLE AS C    
        WHERE username= #{username,jdbcType=VARCHAR} And password=#{password,jdbcType=VARCHAR} And A.userId=C.userId   
    </select> 
    
 <!-- 查全量用户数据，暂时不分页 -->
 <select id="queryAllUserInfo" resultMap="BaseResultMap"    
        parameterType="java.lang.String">    
        SELECT    
        A.username,A.password,A.telephone,A.age,A.company,A.userId,A.email,C.userRole    
        FROM TM_USERINFO AS A, TM_USERROLE AS C    
        WHERE A.userId=C.userId   
 </select>
</mapper>