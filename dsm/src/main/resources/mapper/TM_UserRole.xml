<?xml version="1.0" encoding="UTF-8"?>   
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="dao.IUserRoleDao">
<sql id="BASE_SQL_PARAM">userId,userRole</sql>
 <resultMap id="BaseResultMap" type="vo.UserRole">      
        <result column="USERID" property="userId" jdbcType="VARCHAR" />    
        <result column="USERROLE" property="userRole" jdbcType="VARCHAR" />
</resultMap>

<!-- 根据userID查用户权限 -->
<select id="queryUserRoleByUserId" resultMap="BaseResultMap" parameterType="java.lang.String">
SELECT
<include refid="BASE_SQL_PARAM"/>
FROM TM_USERROLE
WHERE userId=#{userId,jdbcType=VARCHAR} 
</select> 

<!-- 添加用户权限 -->
<insert id="addUserRole" parameterType="java.lang.String">  
INSERT INTO 
TM_USERROLE(userId,userRole)
values(#{userId},#{userRole})
        
</insert>

 
</mapper>